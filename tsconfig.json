{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ]
}